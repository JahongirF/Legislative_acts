<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/button_lang_bg"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center"
    android:weightSum="4"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="3"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView_Title_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bxms_title_color" />

        <TextView
            android:id="@+id/textView_Section_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bxms_title_color" />

        <TextView
            android:id="@+id/textView_Chapter_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bxms_title_color" />


    </LinearLayout>

    <ImageView
        android:id="@+id/logo_saved"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_rubbish"
        android:layout_weight="1"/>

</LinearLayout>


